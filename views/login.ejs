<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/images/server.png" type="image/png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Server Monitor | Login</title>
</head>

<body>

    <div class="login">
        <h1>Login to PM2 Dash</h1>
        <form>
            <p><input id="login-email" type="text" name="login" value="" placeholder="Email"></p>
            <p><input id="login-pass" type="password" name="password" value="" placeholder="Password"></p>
            <!-- <p class="remember_me">
                <label>
                    <input type="checkbox" name="remember_me" id="remember_me">
                    Remember me on this computer
                </label>
            </p> -->
            <p class="submit"><input id="login-submit" type="button" name="commit" value="Submit"></p>
        </form>
    </div>

    <div class="login-help">
        <p>Need an account? <a href="/views/signup">Click here to create it</a>.</p>
    </div>
    <div class="login-help">
        <p>Forgot your password? <a href="/views/reset">Click here to reset it</a>.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/javascripts/login.js"></script>
</body>

</html>